{
    "exp_name": "exp_1",
    "device": "gpu",
    "seed": 22,

    "data_loader": {
        "base_dir": "/glade/derecho/scratch/kjmayer/DATA/CESM2-LE/HIST/",
        "atm_var": "TREFHT",
        "lnd_var": "SOILWATER_10CM",
        "ocn_var": "TS",
        "lead": [1,7,14,21,28,35],
        "anommems_finames": [
            "_anom_011_1950-2014.nc",
            "_anom_012_1950-2014.nc",
            "_anom_013_1950-2014.nc",
            "_anom_014_1950-2014.nc",
            "_anom_015_1950-2014.nc",
            "_anom_016_1950-2014.nc",
            "_anom_017_1950-2014.nc",
            "_anom_018_1950-2014.nc",
            "_anom_019_1950-2014.nc",
            "_anom_020_1950-2014.nc"
        ],
        "climo_finame": ["_doymean_ensmean011-020_1950-2014.nc"],
        "batch_size": 100
    },
    

    "unet_arch_atm": {
        "type": "unet",
        "circular_padding": [5, 5, 0, 0],
        "down_filters": [2,128,256,512], 
        "up_filters": [256,128,1],
        "down_kernel_size": [5,3,3],
        "up_kernel_size": [5,5,3],
        "down_act": ["ReLU","ReLU","ReLU","ReLU"],
        "up_act": ["ReLU","ReLU","ReLU"],
        "down_padding": ["same","same","same","same"],
        "up_padding": [2,2,1],
        "up_output_padding": [[1,0],1,0]
    },
    
    "arch_atm": {
        "type": "cnn",
        "circular_padding": [5, 5, 0, 0],
        "n_inputchannel": 2,
        "filters": [8], 
        "kernel_size": [5],
        "cnn_act": ["ReLU"],
        "hiddens_block_in": [29568,13824],
        "hiddens_block": [13824],
        "hiddens_block_act": ["ReLU"],
        "hiddens_final": 13824,
        "hiddens_final_in": 13824,
        "hiddens_final_act": false
    },

    "optimizer": {
        "adam": "Adam",
        "adam_args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        },
        "sgd": "SGD",
        "sgd_args":{
            "lr": 0.01,
            "weight_decay": 0.0,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    
    "criterion": "weighted_l1_loss", 

    "metrics": ["MAE","MSE"],

    "trainer": {
        "max_epochs": 50,
        "save_dir": "saved_models/",
        "early_stopping":{
            "args":{
                "patience": 10,
                "min_delta": 0.001
            }
        }
    },
    "lr_scheduler": {
        "patience": 2,
        "min_delta": 0.01,
        "factor": 0.1
        }
    }